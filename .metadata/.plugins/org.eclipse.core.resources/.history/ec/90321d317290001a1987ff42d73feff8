<script type="text/javascript">
function validate(){
	var c=document.getElementById("cpwd").value;
	var p=document.getElementById("pwd").value;
	var pvn=document.getElementById("fname").value;
	var x = document.getElementsByTagName("INPUT");
	
	if(p!=c)
		{
			alert("Password and Confirm Password are not same");
			return false;
		}
	/* if(pvn==""){
		document.getElementById("fname").style.border = "2px solid red";
		document.getElementById("fname").setCustomValidity("Name shld not be empty");
		} */
	if(x==""){
		document.getElementsByTagName("INPUT").style.border = "2px solid red";

		}
	
	
}
</script>
